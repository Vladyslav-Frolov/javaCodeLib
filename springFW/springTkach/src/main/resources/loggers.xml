<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:util="http://www.springframework.org/schema/util"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd

        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean id="consoleEventLogger" class="info.vladyslav.springcore.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="info.vladyslav.springcore.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="D:\Documents\Workspace\myCodeLib\javaMain\springFW\springTkach\logReport.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="info.vladyslav.springcore.CacheFileEventLogger" parent="fileEventLogger"
          init-method="init" destroy-method="destroy">
        <constructor-arg value="5"/>
        <!--        <constructor-arg value="D:\Documents\Workspace\myCodeLib\javaMain\springFW\tkach\logReport.txt"/>-->
    </bean>

    <bean id="combinedEventLogger" class="info.vladyslav.springcore.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>


</beans>